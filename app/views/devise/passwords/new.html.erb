<h2 style="padding-left:100px">Forgot your password?</h2>
<div style="padding-left:100px;">

	<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>


    <%= f.input :email, :required => true, :autofocus => true, placeholder: 'Please enter your email', input_html: {class: 'form-control'}, label_html: {class: 'col-sm-2 control-label' }, wrapper_html: {class: 'form-group'} %>


  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions", style:"margin-left:17%" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>