
<div class="container">
	<div class="row">
		<%= render partial: '/sidebar' %>
		<div class="col-md-9" id="padding">
			<div class="row">
        <div class="col-md-10">
        <% if flash[:notice]  %>
          <div class="alert alert-dismissable alert-success">
            <button type="button" class="close" data-dismiss="alert">Ã—</button>
            <strong><%= flash[:notice] %></strong> 
          </div>
        <% end %>
          <p class="lead"> Listing users </p>
        </div>
        <div class="col-md-2">
          <%= link_to 'Add User', new_users_admin_path, class: 'btn btn-primary' %>
        </div>
        </div>


  <table class="table table-striped table-hover">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Institution</th>
      <th>Role</th>
      <th colspan="3" class="text-center"></th>
    </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.institution %></td>
        <td><%= user.roles.first.name %></td>
        <td><%= link_to 'Show', users_admin_path(user) %></td>
        <td><%= link_to 'Edit', edit_users_admin_path(user) %></td>
        <td><%= link_to 'Destroy',users_admin_path(user), method: :delete, data: { confirm: 'Are you sure?' }%></td>
      </tr>
    <% end %>
  </table>
  <div  class='col-lg-offset-4'>
    <%= will_paginate(@users, :renderer => WillPaginate::ActionView::LinkRenderer)%>
  </div>
    
  	</div>
</div>