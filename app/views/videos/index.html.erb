<div class="container">
  <div class="row">
    <%= render partial: '/sidebar' %>
    <div class="col-md-9" id="padding">
      <div class="row">
        <div class="col-md-10">
        <% if flash[:notice]  %>
          <div class="alert alert-dismissable alert-success">
            <button type="button" class="close" data-dismiss="alert">Ã—</button>
            <strong><%= flash[:notice] %></strong> 
          </div>
        <% end %>
          <p class="lead"> Listing videos </p>
        </div>
        <div class="col-md-2">
          <%= link_to 'Add Video', upload_new_video_path, class: 'btn btn-primary' %>
        </div>
        </div>


  <table class="table table-striped table-hover">
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>

    <% @videos.each do |video| %>
      <tr>
        <td><%= video.title %></td>
        <td><%= link_to 'Show', video_path(video.id) %></td>
        <td><%= link_to 'Edit', edit_video_path(video.id) %></td>
        <td> <%= link_to 'Destroy',{action: 'destroy', controller: 'videos', id: video.id}, method: :delete, data: { confirm: 'Are you sure?' }%></td>
      </tr>
    <% end %>
  </table>
  <div  class='col-lg-offset-4'>
    <%= will_paginate(@videos) %>
  </div>
    