<div class="container">
	<div class="row">
		<%= render partial: '/sidebar' %>
		<div class="col-md-9" id="padding">
			<div class="row">
        <div class="col-md-10">
        <% if flash[:notice]  %>
          <div class="alert alert-dismissable alert-success">
            <button type="button" class="close" data-dismiss="alert">Ã—</button>
            <strong><%= flash[:notice] %></strong> 
          </div>
        <% end %>
        <p class="lead"> Listing users </p>
        </div>
      </div>


  <table class="table table-striped table-hover">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th></th>
      <th colspan="3" class="text-center"></th>
    </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'View Report', {:controller => "reports", 
            :action => "generatereport", :id=> user.id, :format=> :pdf} %></td>
      </tr>
    <% end %>
  </table>
  <div  class='col-lg-offset-4'>
    <%= will_paginate(@users, :renderer => WillPaginate::ActionView::LinkRenderer)%>
  </div>
    
  	</div>
</div>