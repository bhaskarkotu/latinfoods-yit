

<div class="container">
	<div class="row">
		<%= render partial: '/sidebar' %>
		<div class="col-md-9" id="padding">
      <div class="row">
        <div class="col-md-10">
			     <p class="lead">Listing roles</p>
            <% if flash[:notice]  %>
              <div class="alert alert-dismissable alert-success">
                <button type="button" class="close" data-dismiss="alert">Ã—</button>
                <strong><%= flash[:notice] %></strong> 
              </div>
            <% end %>
      </div>
    <div class=" col-md-2">
      <%= link_to 'Add Role', new_role_path, class: 'btn btn-primary' %>
    </div>
  </div>
  <table class="table table-striped table-hover">
    <tr>
      <th>ID</th>
      <th>Role</th>
      <th colspan="3" class="text-center"></th>
    </tr>

  <% @roles.each do |role| %>
    <tr>
      <td><%= role.id %></td>
      <td><%= role.name %></td>

      <td><%= link_to 'Edit', edit_role_path(role) %></td>
      <td><%= link_to 'Destroy',role_path(role), method: :delete, data: { confirm: 'Are you sure?' }%></td>
    </tr>
  <% end %>
  </table>
		</div>
	</div>
  <div  class='col-lg-offset-4'>
    <%= will_paginate(@roles, :renderer => WillPaginate::ActionView::LinkRenderer)%>
  </div>
</div>

